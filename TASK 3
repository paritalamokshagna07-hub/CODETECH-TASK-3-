# -------- Task 3: NLP Chatbot --------
import nltk
from nltk.chat.util import Chat, reflections

pairs = [
    ["hi|hello|hey", ["Hello! How can I help you today?"]],
    ["what is your name?", ["I am CodTech Chatbot ðŸ˜Š"]],
    ["how are you?", ["I'm doing great!"]],
    ["bye|quit|exit", ["Goodbye! Have a nice day!"]],
]

chatbot = Chat(pairs, reflections)

print("ðŸ¤– CodTech Chatbot (type 'quit' to exit)")
chatbot.converse()
